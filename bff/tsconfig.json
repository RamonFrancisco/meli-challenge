  "compilerOptions": {
    "outDir": "./api",
    "module": "CommonJS",
    "target": "ES2019",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["bin", "src"],
  "exclude": ["node_modules"]
}
